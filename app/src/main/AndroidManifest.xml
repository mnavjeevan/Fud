<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fredlee.practiceapp" >
    <uses-feature android:name="android.hardware.CAMERA"
        android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@drawable/icon48"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.fredlee.practiceapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.fredlee.practiceapp.AddLog"
            android:label="@string/app_name"
            android:parentActivityName="com.example.fredlee.practiceapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fredlee.practiceapp.MainActivity" />
        </activity>
    </application>

</manifest>
